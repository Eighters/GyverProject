{% extends 'layout_admin.html.twig' %}

{% block title %}Invation Utilisateur{% endblock %}

{% block underNavTitle %}Gestion des invitations{% endblock %}
{% block underNavText %}Vous avez {{ pagination.getTotalItemCount }} invitations{% endblock %}

{% block body %}

    <div class="row center">
        <a href="{{ path('admin_show_all_user') }}" class="waves-effect waves-light btn amber accent-4">
            Retour gestions utilisateurs
        </a>
    </div>

    <div class="row">
        <div class="col s12 m8 offset-m2">
            <div class="row">
                <ul class="collection">
                    <li class="collection-item">
                        <div class="row invitation valign-wrapper">
                            <div class="col s3 valign">
                                <p class="center-align">Date d'envoi</p>
                            </div>
                            <div class="col s4 valign">
                                <p class="center-align">Destinataire</p>
                            </div>
                            <div class="col s2 valign">
                                <p class="center-align">Status</p>
                            </div>
                            <div class="col s3 valign">
                                <p class="center-align">Actions</p>
                            </div>
                        </div>
                    </li>

                    {% for invitation in pagination %}
                        <li class="collection-item">
                            <div class="row invitation valign-wrapper">
                                <div class="col s3 valign center-align">
                                    <p>{{ invitation.sentAt|date(' d/m/Y G:i') }}</p>
                                </div>

                                <div class="col s4 valign center-align">
                                    <p>{{ invitation.email }}</p>
                                </div>

                                <div class="col s2 valign center-align">
                                    <p>{{ invitation.status }}</p>
                                </div>

                                <div class="col s3 valign center-align">
                                    <a href="#" class="btn-floating cyan lighten-2 tooltipped" data-position="top" data-delay="50" data-tooltip="Voir Détails">
                                        <i class="material-icons">info</i>
                                    </a>

                                    <a href="#" class="btn-floating yellow darken-1 tooltipped" data-position="top" data-delay="50" data-tooltip="Réenvoyer l'inviation">
                                        <i class="material-icons">replay</i>
                                    </a>

                                    <a href="{{ path('admin_delete_invitation', { 'id': invitation.code }) }}" class="btn-floating red tooltipped" data-position="top" data-delay="50" data-tooltip="Supprimer l'inviation">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
