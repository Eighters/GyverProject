{% extends 'layout_admin.html.twig' %}

{% block title %}Tableau de bord{% endblock%}

{% block underNavTitle %}Vue Entreprise{% endblock %}
{% block underNavText %}{{ company.name }}{% endblock %}

{% block body %}

    <div class="row">

        <div class="col s12 m12">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign">
                        <i class="material-icons left">folder</i>
                        Company no°{{ company.id }}, <span class="black-text">{{ company.name }}</span>
                    </h5>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">
                        <p>{{ company.description }}</p>

                        <hr>

                        <table class="highlight responsive-table">
                            <tr>
                                <td>Date De création:</td>
                                <td>31/12/2007</td>
                            </tr>
                            <tr>
                                <td>Taille:</td>
                                <td>5 utilisateurs</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets en cours:</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets terminés:</td>
                                <td>2</td>
                            </tr>
                        </table>

                        <hr>

                    </div>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">
                        <p>Liste des projets:</p>

                        <hr>

                        <table class="highlight responsive-table">
                            {% for i in 1..4 %}
                                <tr>
                                    <td>Projet {{ i }}</td>
                                    <td>
                                        <a href="#">voir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>

                        <hr>

                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
