{% extends 'layout_admin.html.twig' %}

{% block title %}Détails Entreprise{% endblock%}

{% block underNavTitle %}Détails Entreprise{% endblock %}
{% block underNavText %}{{ company.name|capitalize }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign">
                        <i class="material-icons left">folder</i>
                        Company no°{{ company.id }}, <span class="black-text">{{ company.name }}</span>
                    </h5>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">
                        <p>{{ company.description }}</p>

                        <hr>

                        <table class="highlight responsive-table">
                            <tr>
                                <td>Date De création:</td>
                                <td>31/12/2007</td>
                            </tr>
                            <tr>
                                <td>Taille:</td>
                                <td>5 utilisateurs</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets en cours:</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets terminés:</td>
                                <td>2</td>
                            </tr>
                        </table>

                        <hr>

                    </div>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <hr>
                            <p>Project Clients:</p>
                            <hr>

                            <table class="highlight responsive-table">
                                {% if customerProjects is defined and customerProjects is not null %}
                                    {% for project in customerProjects %}
                                        <tr>
                                            <td>{{ project.name }}</td>
                                            <td>
                                                <a href="{{ path('admin_show_project', {'id': project.id}) }}">Voir Détails</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>Aucun Projet</td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>

                        <div class="row">
                            <hr>
                            <p>Project Consultants:</p>
                            <hr>

                            <table class="highlight responsive-table">
                                {% if supplierProjects is defined and supplierProjects is not null %}
                                    {% for project in supplierProjects %}
                                        <tr>
                                            <td>{{ project.name }}</td>
                                            <td>
                                                <a href="{{ path('admin_show_project', {'id': project.id}) }}">Voir Détails</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>Aucun Projet</td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content">
                    <a href="{{ path('admin_show_all_company') }}" class="waves-effect waves-light btn amber accent-4 tooltipped" data-position="top" data-delay="50" data-tooltip="Retour">
                        <i class="material-icons">chevron_left</i>
                    </a>

                    <a class="right btn-floating waves-effect waves-light red tooltipped" data-position="top" data-delay="50" data-tooltip="Supprimer">
                        <i class="material-icons">delete</i>
                    </a>

                    <a class="right btn-floating waves-effect waves-light green tooltipped" data-position="top" data-delay="50" data-tooltip="Editer">
                        <i class="material-icons">edit</i>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
