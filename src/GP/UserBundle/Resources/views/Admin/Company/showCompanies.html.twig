{% extends 'layout_admin.html.twig' %}

{% block title %}Gestions des Entreprises{% endblock%}

{% block underNavTitle %}Liste des Entreprises{% endblock %}
{% block underNavText %}Vous avez {{ pagination.getTotalItemCount }} Entreprises{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">

            {% for company in pagination %}
                <div class="col s12 m6">
                    <div class="card">
                        <div class="card pink accent-4 white-text">
                            <div class="card-content">
                                <h5 class="valign center-align center">
                                    <i class="material-icons medium">business</i>
                                    <br/>
                                    {{ company.name }}
                                </h5>
                            </div>
                        </div>
                        <div class="card-content"></div>
                    </div>
                </div>
            {% endfor %}

            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}




