{% extends 'layout_admin.html.twig' %}

{% block title %}Gestions des Projets{% endblock%}

{% block underNavTitle %}Liste des Projets{% endblock %}
{% block underNavText %}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign center-align center">
                        <i class="material-icons medium">folder</i>
                        <br/>
                        {{ project.name }}
                    </h5>
                </div>

                <div class="row">
                    <div class="col s6 m6">
                        <div class="card">
                            <div class="card">
                                <div class="card-content">
                                    <ul class="collection">
                                        <li class="collection-item">
                                            <i class="material-icons">short_text</i> Nom du projet : {{ project.name }}
                                        </li>
                                        <li class="collection-item">
                                            <i class="material-icons">av_timer</i> Statut du projet : {{ project.status }}
                                        </li>
                                        <li class="collection-item">
                                            <i class="material-icons">today</i> Date de début : {{ project.beginDate|date("d/m/Y") }}
                                        </li>
                                        <li class="collection-item">
                                            <i class="material-icons">today</i> Date de fin prévue : {{ project.plannedEndDate|date("d/m/Y") }}
                                        </li>
                                        <li class="collection-item">
                                            <i class="material-icons">today</i> Date de fin réelle : {{ project.realEndDate|date("d/m/Y") }}
                                        </li>
                                        <li class="collection-item">
                                            <i class="material-icons">description</i>
                                            Description :
                                            <br/><br/>
                                            {{ project.description }}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col s6 m6">
                        <div class="card">
                            <div class="card-content">
                                <ul class="collection">
                                    <li class="collection-header center"><h4>Entreprises</h4></li>
                                    <li class="collection-item">
                                        Client :
                                        <a href="{{ path('admin_show_company', {'id': project.customerCompany.id}) }}">
                                            {{ project.customerCompany.name }}
                                        </a>
                                    </li>
                                    <li class="collection-item">
                                        Prestataire :
                                        <a href="{{ path('admin_show_company', {'id': project.supplierCompany.id}) }}">
                                            {{ project.supplierCompany.name }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <a href="{{ path('show_all_projects') }}" class="btn-floating btn-large waves-effect waves-light red tooltipped" data-position="top" data-delay="50" data-tooltip="Retour">
                <i class="material-icons">chevron_left</i>
            </a>
            <a class="right btn-floating btn-large waves-effect waves-light red tooltipped" data-position="top" data-delay="50" data-tooltip="Supprimer">
                <i class="material-icons">delete</i>
            </a>
            <a class="right btn-floating btn-large waves-effect waves-light red tooltipped" data-position="top" data-delay="50" data-tooltip="Editer">
                <i class="material-icons">edit</i>
            </a>
        </div>
    </div>

{% endblock %}
