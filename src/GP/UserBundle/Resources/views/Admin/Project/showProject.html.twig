{% extends 'layout_admin.html.twig' %}

{% block title %}Détails Projet{% endblock%}

{% block underNavTitle %}Détail Projet{% endblock %}
{% block underNavText %}{{ project.name|capitalize }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content grey darken-2 white-text">
                    <h5 class="valign">
                        <i class="material-icons left">folder</i>
                        Projet {{ project.id }}, <span class="black-text">{{ project.name }}</span>
                    </h5>
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card">
                <div class="card-content grey lighten-1 white-text">
                    <h5 class="valign center">Détails Du Projet:</h5>
                </div>

                <div class="card-content">
                    <ul class="collection">
                        <li class="collection-item">
                            <i class="material-icons">short_text</i> Nom du projet : {{ project.name }}
                        </li>
                        <li class="collection-item">
                            <i class="material-icons">av_timer</i> Statut du projet : {{ project.status }}
                        </li>
                        <li class="collection-item">
                            <i class="material-icons">today</i> Date de début : {{ project.beginDate|date("d/m/Y") }}
                        </li>
                        <li class="collection-item">
                            <i class="material-icons">today</i> Date de fin prévue : {{ project.plannedEndDate|date("d/m/Y") }}
                        </li>
                        <li class="collection-item">
                            <i class="material-icons">today</i> Date de fin réelle : {{ project.realEndDate|date("d/m/Y") }}
                        </li>
                        <li class="collection-item">
                            <i class="material-icons">description</i>
                            Description :
                            <br/><br/>
                            {{ project.description }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card">
                <div class="card-content grey lighten-1 white-text">
                    <h5 class="valign center">Entreprises:</h5>
                </div>

                <div class="card-content">
                    <ul class="collection">
                        <li class="collection-item">
                            Client :
                            <a href="{{ path('admin_show_company', {'id': project.customerCompany.id}) }}">
                                {{ project.customerCompany.name }}
                            </a>
                        </li>
                        <li class="collection-item">
                            Prestataire :
                            <a href="{{ path('admin_show_company', {'id': project.supplierCompany.id}) }}">
                                {{ project.supplierCompany.name }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content">
                    <a href="{{ path('admin_show_all_project') }}" class="waves-effect waves-light btn amber accent-4 tooltipped" data-position="top" data-delay="50" data-tooltip="Retour">
                        <i class="material-icons">chevron_left</i>
                    </a>

                    <a class="right btn-floating waves-effect waves-light red tooltipped" data-position="top" data-delay="50" data-tooltip="Supprimer">
                        <i class="material-icons">delete</i>
                    </a>

                    <a class="right btn-floating waves-effect waves-light green tooltipped" data-position="top" data-delay="50" data-tooltip="Editer">
                        <i class="material-icons">edit</i>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
