{% extends "::layout_connected.html.twig" %}

{% block title %}Profil utilisateur{% endblock %}
{% block underNavTitle %}Profil utilisateur{% endblock %}
{% block underNavText %}Retrouvez ici l'ensembles des informations relatives à un utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                <div class="card">
                    <div class="card cyan darken-2 white-text">
                        <div class="card-content ">
                            <div class="right">
                                <a href="#"  class="btn-floating yellow darken-1 tooltipped" data-position="top" data-delay="50" data-tooltip="Editer">
                                    <i class="material-icons">create</i>
                                </a>
                                <a href="#" class="btn-floating green tooltipped" data-position="top" data-delay="50" data-tooltip="Archiver">
                                    <i class="material-icons">archive</i>
                                </a>
                                <a href="#" onclick="confirmAdminDeleteUser({{ user.id }})" class="btn-floating red tooltipped" data-position="top" data-delay="50" data-tooltip="Supprimer">
                                    <i class="material-icons ">delete</i>
                                </a>
                            </div>
                            <h4>
                                <i class="material-icons small">perm_identity</i>
                                {{ user.firstName }} {{ user.lastName }}
                            </h4>

                        </div>
                    </div>
                    <div class="card-content">
                        {{ user.civility ? 'Homme' : 'Femme' }} <br>
                        Compte {{ user.enabled ? 'activé' : 'archivé' }} <br>
                        Dernière connexion : {{ user.lastLogin|date('d/m/Y H:i:s') }}
                        <ul class="collection with-header">
                            <li class="collection-header"><h5>Emails</h5></li>
                            <li class="collection-item">{{ user.email }}</li>
                            {% for email in user.emailList %}
                                <li class="collection-item">{{ email.email }}</li>
                            {% endfor %}
                        </ul>
                        <ul class="collection with-header">
                            <li class="collection-header"><h5>Numéros de téléphone</h5></li>
                            {% for phone in user.phoneList %}
                                <li class="collection-item">{{ phone.number }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="card-action">

                    </div>
                </div>
            </div>
            <div class="col s12 m6">
                <div class="card">
                    <div class="card cyan darken-2 white-text">
                        <div class="card-content ">
                            <h4>
                                <i class="material-icons small">business</i>
                                Entreprises
                            </h4>
                        </div>
                    </div>
                    <div class="card-content">
                        {% if user.company|length == 0 %}
                            <p>no company</p>
                        {% else %}
                            <ul>
                                {% for company in user.company %}
                                    <li>{{ company.name }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="offset-s2 col s8">
            <a class="btn-floating amber accent-4 tooltipped" data-position="left" data-delay="50" data-tooltip="retour" href="{{ path('show_users') }}">
                <i class="material-icons">fast_rewind</i>
            </a>
        </div>

    </div>

{% endblock %}
