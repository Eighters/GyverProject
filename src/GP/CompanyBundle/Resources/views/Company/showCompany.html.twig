{% extends 'layout_connected.html.twig' %}

{% block title %}Tableau de bord{% endblock%}

{% block body %}

    <div class="row center">
        {# Only an company can create project category for her comapny #}
        <a href="#" class="waves-effect waves-light btn amber accent-4">
            <i class="material-icons right">add_circle_outline</i>
            Créer une nouvelle Catégorie Projet
        </a>
    </div>

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign">
                        <i class="material-icons left">folder</i>
                        Company no°{{ company.id }}, <span class="black-text">{{ company.name }}</span>
                    </h5>
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign center">Détails Entreprise:</h5>
                </div>

                <div class="card-content">
                    <p>{{ company.description }}</p>
                    <hr>

                    <table class="highlight responsive-table">
                        <tr>
                            <td>Date De création:</td>
                            <td>{{ company.creationDate|date('d/m/Y') }}</td>
                        </tr>
                        <tr>
                            <td>Taille:</td>
                            <td>{{ company.user|length }} utilisateurs</td>
                        </tr>
                        <tr>
                            <td>Nombre de projets en cours:</td>
                            <td>1</td>
                        </tr>
                        <tr>
                            <td>Nombre de projets terminés:</td>
                            <td>2</td>
                        </tr>
                    </table>

                    <hr>
                </div>
            </div>

            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign center">Projets de l'entreprise: {{ customerProject|length + supplierProject|length }}</h5>
                </div>

                <div class="card-content">
                    <div class="row">
                        <hr>
                        <p>Projet Clients: {{ customerProject|length }}</p>
                        <hr>

                        <table class="highlight responsive-table">
                            {% if customerProject is defined and customerProject is not null %}
                                {% for project in customerProject %}
                                    <tr>
                                        <td>{{ project.name }}</td>
                                        <td>
                                            <a href="{{ path('show_project', {'id': project.id}) }}">Voir Détails</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td>Aucun Projet</td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>

                    <div class="row">
                        <hr>
                        <p>Projet Consultants: {{ supplierProject|length }}</p>
                        <hr>

                        <table class="highlight responsive-table">
                            {% if supplierProject is defined and supplierProject is not null %}
                                {% for project in supplierProject %}
                                    <tr>
                                        <td>{{ project.name }}</td>
                                        <td>
                                            <a href="{{ path('show_project', {'id': project.id}) }}">Voir Détails</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td>Aucun Projet</td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <ul class="collapsible" data-collapsible="accordion">
                <li>
                    <div class="collapsible-header tooltipped" data-position="left" data-delay="20" data-tooltip="Voir tous les membres">
                        <i class="material-icons">done_all</i>
                        Roles: {{ company.companyRoles|length }}

                        <i class="material-icons right">info_outline</i>
                    </div>
                    <div class="collapsible-body">
                        {% if company.companyRoles|length == 0 %}
                            <p>Aucun rôles</p>
                        {% else %}
                            <ul class="collection">
                                {% for role in company.companyRoles %}
                                    <li class="collection-item">
                                        <a href="#">
                                            <span class="title">{{ role.name }}</span>
                                        </a>
                                        <span class="right">{{ role.description }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </li>

                <li>
                    <div class="collapsible-header tooltipped" data-position="left" data-delay="20" data-tooltip="Voir tous les membres">
                        <i class="material-icons">supervisor_account</i>
                        Membres: {{ company.user|length }}

                        <i class="material-icons right">info_outline</i>
                    </div>
                    <div class="collapsible-body">
                        <div class="user-with-role-list">
                            {% if company.user|length == 0 %}
                                <p>Pas de membre</p>
                            {% else %}
                                <table class="highlight responsive-table">
                                    {% for user in company.user %}
                                        <tr class="collection-item">
                                            <td>
                                                <a href="#">
                                                    {{ user.firstName }} {{ user.lastName }}
                                                </a>
                                            </td>
                                            <td>Rôle:</td>
                                            <td>
                                                {% if user.accessRole|length == 0 %}
                                                    <span>Rôle: Undefined</span>
                                                {% else %}
                                                    {% for role in user.accessRole %}
                                                        <a class="waves-effect waves-teal btn-flat" href="#">
                                                            {{ role.name }}
                                                        </a>
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            {% endif %}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
