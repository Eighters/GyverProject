{% extends 'layout_connected.html.twig' %}

{% block title %}Tableau de bord{% endblock%}

{% block body %}

    <div class="row center">
        {# Only an company can create project category for her comapny #}
        <a href="#" class="waves-effect waves-light btn amber accent-4">
            <i class="material-icons right">add_circle_outline</i>
            Créer une nouvelle Catégorie Projet
        </a>
    </div>

    <div class="row">

        <div class="col s12 m12">
            <div class="card">
                <div class="card-content cyan darken-2 white-text">
                    <h5 class="valign">
                        <i class="material-icons left">folder</i>
                        Company no°{{ company.id }}, <span class="black-text">{{ company.name }}</span>
                    </h5>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">
                        <p>
                            {{ company.description }}
                        </p>

                        <hr>

                        <table class="highlight responsive-table">
                            <tr>
                                <td>Date De création:</td>
                                <td>31/12/2007</td>
                            </tr>
                            <tr>
                                <td>Taille:</td>
                                <td>5 utilisateurs</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets en cours:</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>Nombre de projets terminés:</td>
                                <td>2</td>
                            </tr>
                        </table>

                        <hr>

                    </div>
                </div>
            </div>
        </div>

        <div class="col s6 m6">
            <div class="card">
                <div class="card">
                    <div class="card-content">

                        <div class="row">
                            <hr>
                            <p>Project Clients:</p>
                            <hr>

                            <table class="highlight responsive-table">
                                {% if customerProject is defined and customerProject is not null %}
                                    {% for project in customerProject %}
                                        <tr>
                                            <td>{{ project.name }}</td>
                                            <td>
                                                <a href="{{ path('show_project', {'id': project.id}) }}">Voir Détails</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>Aucun Projet</td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>

                        <div class="row">
                            <hr>
                            <p>Project Consultants:</p>
                            <hr>

                            <table class="highlight responsive-table">
                                {% if supplierProject is defined and supplierProject is not null %}
                                    {% for project in supplierProject %}
                                        <tr>
                                            <td>{{ project.name }}</td>
                                            <td>
                                                <a href="{{ path('show_project', {'id': project.id}) }}">Voir Détails</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>Aucun Projet</td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
