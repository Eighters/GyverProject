{% set i = 0 %}

{% extends '::base.html.twig' %}

{% block title %}Admin OverView{% endblock %}
{% block underNavTitle %}Welcome{% endblock %}
{% block underNavText %}DashBoard{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <ul class="collection">
                {% for u in users %}
                    <li href="#!" class="collection-item avatar">
                        <img src="http://lorempixel.com/{{ random(500) }}/{{ random(500) }}/people/" class="circle">
                        <span class="title">{{ u.firstName }} {{ u.lastName }}</span>
                        <p>Compte: {{ u.enabled ? 'actif':'archiv√©' }}</p>
                        <p>
                            Entreprise{% if u.company|length > 1 %}s{% endif %}:

                                {% for company in u.company %}
                                    {% if loop.last %}
                                        {{ company.name }}
                                    {% else  %}
                                        {{ company.name }} |
                                    {% endif %}
                                {%  endfor %}

                        </p>
                        <div  class="secondary-content">
                            <div class="fixed-action-btn horizontal click-to-toggle">
                                <a class="btn-floating btn-large waves-effect waves-light amber accent-4 tooltipped" data-position="right" data-delay="50" data-tooltip="View Actions">
                                    <i class="material-icons">more_vert</i>
                                </a>

                                <ul>
                                    <li>
                                        <a href="{{ path('user_show', {'id': u.id}) }}" class="btn-floating cyan lighten-2 tooltipped" data-position="top" data-delay="50" data-tooltip="View">
                                            <i class="material-icons">info</i>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="btn-floating yellow darken-1 tooltipped" data-position="top" data-delay="50" data-tooltip="Edit">
                                            <i class="material-icons">create</i>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="btn-floating green tooltipped" data-position="top" data-delay="50" data-tooltip="Archive">
                                            <i class="material-icons">archive</i>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="btn-floating red tooltipped" data-position="top" data-delay="50" data-tooltip="Delete">
                                            <i class="material-icons ">delete</i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!--
                            <i class="material-icons" title="Voir">visibility</i>
                            <i class="material-icons" title="Modifier">settings</i>
                            <i class="material-icons" title="Archiver">lock_outline</i>
                            <i class="material-icons" title="Supprimer">delete</i>
                            -->
                            {# href="{{ path('user_show', {'id': u.id}) }}" #}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
