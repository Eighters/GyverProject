<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %} | Gyver Project</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {# Stylesheets Block #}
        {% block stylesheets %}
            {{ include('::stylesheets.html.twig') }}
        {% endblock %}
    </head>

    <body>
        {% block header %}
            {{ include('::header.html.twig') }}
        {% endblock %}

        {% block flashMessage %}
            {{ include('::flashMessage.html.twig') }}
        {% endblock %}

        {# Body Block #}
        {% block body %}{% endblock %}
        {# End Body #}

        {% block footer %}
            {{ include('::footer.html.twig') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/materialize.min.js') }}"></script>
            <script>
                function addInputField(name){

                    switch(name) {
                        case "mail":
                            $("#add_mail").before("<input type='text' name='mail[]' />");
                            break;
                        case "phone":
                            $("#add_phone").before("<input type='text' name='phone[]' />");
                            break;
                    }
                }
            </script>
        {% endblock %}
    </body>
</html>
