{% extends '::layout_disconnected.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}

    <div class="vcenter">
        <div class="container">
            <div class="row center">
                <div class="col offset-l3 l6 s12">

                    <div class="card white">
                        <div class="card-content z-depth-2">

                            <div class="col s12 application-icon">
                                <img src="{{ asset('assets/images/logoLogin.png') }}" alt="" class="gyver-logo responsive-img valign">
                            </div>

                            <div class="col s12">
                                <p>Changement de mot de passe :</p>
                                <p>Veuillez saisir votre nouveau mot de passe :</p>
                            </div>

                            <form action="{{ path('reset_password', {'token': token}) }}" {{ form_enctype(form) }} method="POST">

                                <div class="input-field col s12">
                                    <i class="material-icons prefix">vpn_key</i>
                                    {{ form_widget(form.plainPassword.first) }}
                                    {{ form_label(form.plainPassword.first, 'Nouveau mot de passe') }}
                                    {% if not form.plainPassword.first.vars.valid %}
                                        <div class="red-text">
                                            Les mots de passe ne sont pas identiques
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="input-field col s12">
                                    <i class="material-icons prefix">vpn_key</i>
                                    {{ form_widget(form.plainPassword.second) }}
                                    {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe') }}
                                </div>

                                {{ form_widget(form._token) }}

                                <button class="btn waves-effect waves-light  cyan darken-2" type="submit" name="_submit">
                                    Confirmer
                                </button>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

