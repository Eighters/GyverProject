version: '2'

services:
    nginx:
        image: nginx
        container_name: nginx
        ports:
            - "80:80"
        links:
            - "symfony:symfony"
        volumes:
            - ".:/home/docker:ro"
            - "./app/config/docker/default.conf:/etc/nginx/conf.d/default.conf:ro"

    symfony:
        build: ./app/config/docker/
        container_name: symfony
        links:
            - "db:db"
        volumes:
            - ".:/home/docker:rw"
            - "./app/config/docker/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro"
        working_dir: "/home/docker"
        user: "devops"

    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        container_name: myadmin
        restart: always
        environment:
            - "PMA_HOST=db"
            - "PMA_USER=gyver"
            - "PMA_PASSWORD=institutg4"
        ports:
            - "8080:80"
        depends_on:
            - "db"

    db:
        image: mysql:5.7
        container_name: db
        restart: always
        environment:
            - "MYSQL_ROOT_PASSWORD=institutg4"
            - "MYSQL_USER=gyver"
            - "MYSQL_PASSWORD=institutg4"
            - "MYSQL_DATABASE=gyver_project"
        ports:
            - "3306:3306"
        volumes:
          - "./.data/db:/var/lib/mysql"
